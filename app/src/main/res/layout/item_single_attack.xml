<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="@dimen/content_offset">

    <LinearLayout
        android:layout_width="@dimen/content_offset"
        android:layout_height="@dimen/content_offset"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/random_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_casino"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <ImageView
        android:id="@+id/defender_color"
        android:layout_width="@dimen/square_button"
        android:layout_height="@dimen/square_button"
        android:layout_marginStart="@dimen/content_offset"
        tools:background="#342312"
        android:layout_marginEnd="@dimen/content_offset"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/attacks"
        style="@style/CaptionFieldTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="5" />

    <Button
        android:id="@+id/remove_button"
        android:layout_width="@dimen/square_button"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_remove" />
</LinearLayout>
