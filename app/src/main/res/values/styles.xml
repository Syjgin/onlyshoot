<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextFieldTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>

    <style name="TextFieldSubTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/sub_size</item>
    </style>
    <style name="WhiteText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>
    <style name="CaptionFieldTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/caption_color</item>
        <item name="android:textSize">@dimen/caption_size</item>
    </style>

    <style name="DigitFieldTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/caption_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/digit_size</item>
    </style>
    <style name="BottomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@drawable/bottom_button_text</item>
        <item name="android:textSize">@dimen/normal_size</item>
        <item name="android:background">@drawable/bottom_button_color</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
